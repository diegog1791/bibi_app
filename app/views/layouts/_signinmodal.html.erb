<div class="modal" id="signinModal" tabindex="-2" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Inicia sesion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        
                        placeholder: "Email",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        
                        placeholder: "Contraseña",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me,
                        label: 'Recordar contraseña' ,
                        as: :boolean if devise_mapping.rememberable? %>
          </div>

          

        
     
      </div>
      <div class="modal-footer">
      <div class="form-actions">
            <%= f.button :submit, "Inicia sesión" %>
          </div>
        <% end %>
        
          
        </div></button>
      </div>
      
    </div>
  </div>
</div>