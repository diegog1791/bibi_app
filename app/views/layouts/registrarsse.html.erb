<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2>Registrate</h2>
      <br>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name,
                      label: 'Nombre',
                      required: true %>
          <%= f.input :last_name,
                      label: 'Apellido Paterno',
                      required: true %>
          <%= f.input :mothers_last_name,
                      label: 'Apellido Materno',
                      required: true %>
          <%= f.input :email,
                      label: 'Correo Electrónico',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: 'Contraseña',
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: 'Confirmar contraseña',
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :bb_coun_try_code,
                      label: 'Código de país (México: +52)',
                      required: true %>            
          <%= f.input :cellphone_number,
                      label: 'Teléfono',
                      required: true %>
          <%= f.input :birthday,
                      label: 'Cumpleaños',
                      required: true %>
          <%= f.input :rfc,
                      label: 'RFC',
                      required: true %>
          <%= f.input :drop_off_location,
                      label: 'Dirección (Calle y número)',
                      required: true %>
          <%= f.input :neighborhood,
                      label: 'Colonia',
                      required: true %>
          <%= f.input :city,
                      label: 'Ciudad',
                      required: true %>
          <%= f.input :state,
                      label: 'Estado',
                      required: true %>
          <%= f.input :bb_coun_try,
                      label: 'País',
                      required: true %>
          <%= f.input :zip_code,
                      label: 'Código Postal',
                      required: true %>                                        
          <%= f.input :about,
                      label: 'Acerca de mí',
                      required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Enviar" %>
        </div>
      <% end %>

      <br>

      <%= render "devise/shared/links" %>


      <br>

    </div>
  </div>
</div>